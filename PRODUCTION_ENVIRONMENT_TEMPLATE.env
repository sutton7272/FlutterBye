# Flutterbye Production Environment Template
# Copy this file to .env.production and fill in all required values

# ========================================
# CRITICAL MAINNET CONFIGURATION
# ========================================

# MainNet RPC Endpoint (use Helius/QuickNode for production)
MAINNET_RPC_ENDPOINT=https://api.mainnet-beta.solana.com
MAINNET_WS_ENDPOINT=wss://api.mainnet-beta.solana.com

# Smart Contract Program ID (deploy to MainNet first)
MAINNET_PROGRAM_ID=

# Production Mint Authority (generate secure keypair)
MAINNET_MINT_AUTHORITY=

# Multi-signature Escrow Wallet (3-of-5 signatures recommended)
MAINNET_ESCROW_WALLET=

# Fee Collection Wallet (secure cold storage recommended)
MAINNET_FEE_WALLET=

# Treasury Wallet (multi-signature recommended)
MAINNET_TREASURY_WALLET=

# ========================================
# FLBY TOKEN CONFIGURATION
# ========================================

# FLBY Token Mint Address (deploy token first)
FLBY_TOKEN_MINT=

# Token Distribution Wallets
FLBY_PLATFORM_WALLET=
FLBY_TEAM_WALLET=
FLBY_COMMUNITY_WALLET=
FLBY_RESERVES_WALLET=

# ========================================
# PRODUCTION SECURITY
# ========================================

# Enable Production Mode
NODE_ENV=production
PRODUCTION_MODE=true

# Session Security
SESSION_SECRET=

# API Security
API_RATE_LIMIT_MAX=1000
API_RATE_LIMIT_WINDOW=900000

# OpenAI Cost Controls
OPENAI_COST_LIMIT_HOURLY=100
OPENAI_COST_LIMIT_DAILY=1000
OPENAI_COST_LIMIT_MONTHLY=10000

# ========================================
# DATABASE CONFIGURATION
# ========================================

# Production Database URL
DATABASE_URL=

# Database Pool Settings
DATABASE_POOL_MIN=5
DATABASE_POOL_MAX=20

# ========================================
# EXTERNAL SERVICES
# ========================================

# OpenAI API
OPENAI_API_KEY=

# Stripe Payment Processing
STRIPE_SECRET_KEY=
VITE_STRIPE_PUBLIC_KEY=

# Twilio SMS (if using FlutterWave)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# ========================================
# MONITORING & ANALYTICS
# ========================================

# Production Monitoring
MONITORING_ENABLED=true
LOG_LEVEL=warn

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true

# ========================================
# DEPLOYMENT CONFIGURATION
# ========================================

# Domain Configuration
PRODUCTION_DOMAIN=your-domain.com
ALLOWED_ORIGINS=https://your-domain.com

# SSL Configuration
SSL_ENABLED=true
FORCE_HTTPS=true

# ========================================
# BACKUP CONFIGURATION
# ========================================

# Database Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Wallet Backup
WALLET_BACKUP_ENABLED=true
WALLET_BACKUP_ENCRYPTION_KEY=

# ========================================
# COMPLIANCE & GOVERNANCE
# ========================================

# OFAC Sanctions Screening
OFAC_SCREENING_ENABLED=true

# KYC/AML Configuration
KYC_ENABLED=true
AML_MONITORING_ENABLED=true

# Governance Configuration
GOVERNANCE_ENABLED=true
VOTING_POWER_THRESHOLD=1000

# ========================================
# ENTERPRISE FEATURES
# ========================================

# Enterprise API Access
ENTERPRISE_API_ENABLED=true
ENTERPRISE_RATE_LIMIT=10000

# Government Client Features
GOVERNMENT_CLIENT_FEATURES=true
COMPLIANCE_REPORTING=true

# ========================================
# PERFORMANCE OPTIMIZATION
# ========================================

# Caching Configuration
REDIS_URL=
CACHE_TTL=3600

# CDN Configuration
CDN_ENABLED=true
CDN_URL=

# Load Balancing
LOAD_BALANCER_ENABLED=true