# FlutterBye AWS Environment Configuration

# Application
NODE_ENV=production
PORT=3000
APP_URL=https://flutterbye.io

# Database (AWS RDS)
DATABASE_URL=postgresql://username:password@your-rds-endpoint:5432/flutterbye

# Custom Minting Backend (Your Dev Team's API)
MINTING_API_URL=https://your-custom-minting-api.com
MINTING_API_KEY=your_minting_api_key_here

# Solana Network
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_NETWORK=mainnet-beta
SOLANA_PRIVATE_KEY=your_solana_private_key

# AI Services
OPENAI_API_KEY=your_openai_api_key

# Social Media APIs
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret

# SMS Services
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Payment Processing
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key

# AWS Services
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=flutterbye-assets
AWS_CLOUDFRONT_DISTRIBUTION_ID=your_cloudfront_id

# Security
JWT_SECRET=your_jwt_secret_here
SESSION_SECRET=your_session_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# Monitoring & Analytics
SENTRY_DSN=your_sentry_dsn_for_error_tracking
MIXPANEL_TOKEN=your_mixpanel_token
GOOGLE_ANALYTICS_ID=your_ga_tracking_id

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cache
REDIS_URL=redis://your-redis-endpoint:6379

# Development Environment Variables (for flutterbye.io/dev)
DEV_DATABASE_URL=postgresql://dev_user:dev_password@dev-db:5432/flutterbye_dev
DEV_MINTING_API_URL=https://dev-minting-api.com
DEV_SOLANA_NETWORK=devnet
DEV_SOLANA_RPC_URL=https://api.devnet.solana.com